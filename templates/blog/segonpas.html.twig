{% extends 'baseadmin.html.twig' %}

{% block title %} Blog {% endblock %}

{% block body %}

<section class="admin-header-suply form" data-module="form">
    <div class="container">
        <div class="row">
            <div class="col">
                <section class="wrap mb-5">
                   
                    <h1 class="title"> Segon Pas </h1>
                    
                    {% for note in app.session.flashbag().get('note')  %}
                            <div style="margin-bottom:40px" class="alert alert-danger">{{ note }}</div>
                    {% endfor %}

                    {% if plantilla == "Plantilla1" %}
                   <div data-module="aceEditor">
                        <form method="post" enctype="multipart/form-data">
                            <div id="segonpas">
                                <div class="form-group mb-5">
                                    <p> Primer Text </p>
                                    <input type="hidden" id="Primertext" name="_Primertext" value="{% if continguts is defined %}{% for contingut in continguts %}{% if contingut.ordre == 0  %}{{ contingut.contingut }}{% endif %}{% endfor %}{% endif %}"><div id="javascript-editor0" class="js-editor-selector" data-vinculatedinput="#Primertext">{% if continguts is defined %}{% for contingut in continguts %}{% if contingut.ordre == 0  %}{{ contingut.contingut }}{% endif %}{% endfor %}{% endif %}</div>
                                </div>
                                <div class="form-group text-entered mb-5">
                                     <label for="Primeraimatge"> Primera Imatge </label>
                                    <input class="form-control" type="file" id="PrimeraImatge" name="_PrimeraImatge" accept="image/png, image/jpeg" data-vinculated-img="#TransferPrimeraimatge">
                                </div>
                                <div id="TransferPrimeraimatge" class="transformpictures">
                                    {% if continguts is defined %}
                                        {% for contingut in continguts %}
                                            {% if contingut.ordre == 1  %}
                                                <div class="transformpchilddiv">
                                                    <img class="transferpicture" src="{{ asset('/uploads/images/' ~ contingut.contingut) }}" />
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <div class="form-group text-entered mb-5">
                                    <label for="Segonaimatge"> Segona Imatge </label>
                                    <input class="form-control" type="file" id="Segonaimatge" name="_SegonaImatge" accept="image/png, image/jpeg" data-vinculated-img="#TransferSegonaimatge">
                                </div>
                                 <div id="TransferSegonaimatge" class="transformpictures">
                                    {% if continguts is defined %}
                                        {% for contingut in continguts %}
                                            {% if contingut.ordre == 2  %}
                                               <div class="transformpchilddiv">
                                                <img class="transferpicture" src="{{ asset('/uploads/images/' ~ contingut.contingut) }}" />
                                            </div>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                                <div class="form-group text-entered mb-5">
                                    <p> Segon Text </p>
                                    <input type="hidden" id="Segontext" name="_Segontext" value="{% if continguts is defined %}{% for contingut in continguts %}{% if contingut.ordre == 3  %}{{ contingut.contingut }}{% endif %}{% endfor %}{% endif %}"><div id="javascript-editor1" class="js-editor-selector" data-vinculatedinput="#Segontext">{% if continguts is defined %}{% for contingut in continguts %}{% if contingut.ordre == 3  %}{{ contingut.contingut }}{% endif %}{% endfor %}{% endif %}</div>
                                </div>
                                <input type="hidden" name="entradaBlog" value="{{ EntradaBlogIdActual }}">
                                <button type="submit">Vista previa</button>
                            </div>
                        </form>
                        </div>
                    </div>
                    {% endif %}

                    
                    {% if plantilla == "Plantilla2" %}
                        
                        <form method="post" enctype="multipart/form-data">
                            <label for="Primertext">Primer Text:</label>
                            <input type="hidden" id="Primertext" name="_Primertext" value="">
                            <div id="javascript-editor0" class="js-editor-selector" data-vinculatedinput="#Primertext"> </div>

                            <p>Primera Imatge:</p>
                            <input type="file" id="PrimeraImatge" name="_PrimeraImatge" accept="image/png, image/jpeg">
                            
                            <input type="hidden" name="entradaBlog" value="{{ EntradaBlogIdActual }}">

                            <button type="submit">Vista previa</button>
                        </form>

                    {% endif %}

                </section>
            </div>
        </div>
    </div>
</section>

    
    
{% endblock %}
